#!/bin/bash

# Exit on any error
set -e

# Colors
GREEN='\033[0;32m'
NC='\033[0m' # No Color

echo -e "${GREEN}Updating system...${NC}"
sudo apt update
sudo apt upgrade -y

echo -e "${GREEN}Installing prerequisites...${NC}"
sudo apt install -y \
    apt-transport-https \
    ca-certificates \
    curl \
    gnupg \
    lsb-release

echo -e "${GREEN}Adding Docker GPG key...${NC}"
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg

echo -e "${GREEN}Setting up the Docker repository...${NC}"
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] \
  https://download.docker.com/linux/ubuntu \
  $(lsb_release -cs) stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

echo -e "${GREEN}Updating package index...${NC}"
sudo apt update

echo -e "${GREEN}Installing Docker Engine...${NC}"
sudo apt install -y docker-ce docker-ce-cli containerd.io

echo -e "${GREEN}Enabling Docker to start on boot...${NC}"
sudo systemctl enable docker
sudo systemctl start docker

echo -e "${GREEN}Adding current user to docker group (logout & login required)...${NC}"
sudo usermod -aG docker $USER

echo -e "${GREEN}Docker installation complete! Run 'docker version' to verify.${NC}"
